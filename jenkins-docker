pipeline {
    agent any
    tools
    {
        maven 'maven-3'
    }
    stages {
        stage('Code Pull from SCM...') {
            steps {

                 git url: 'https://github.com/ravdy/hello-world.git',branch: 'master'
                  }
        }
        stage('Building the code ...')
        {
            steps
            {

                sh " mvn clean package "
            }
        }
        stage('Building the Docker Image')
        {
            steps
            {
              sh 'docker build -t rayinianji/myweb:5.0.0 .   
            }
        }
        }
    
}